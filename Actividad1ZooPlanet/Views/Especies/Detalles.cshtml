@model Actividad1ZooPlanet.Models.ViewModels.DetallesViewModel
@{
    Layout = "Layout";
}
<div class="especieficha1">
    <img src="~/especies/@(Model.Id).jpg" />
    <div>
        <h1>@Model.Nombre</h1>
        <p><label>Clase:</label><a href="~/especies/Index">@Model.Clase</a></p>
        <p><label>Peso:</label>@(Model.Peso)kg</p>
        <p><label>Tamaño:</label>@(Model.Tamaño)cm</p>
        <p><label>Habitat:</label>@Model.Habitat</p>
        <p><label>Descripción:</label></p>
        <p>@Model.Descripcion</p>
    </div>

    <a href="especies.html">Regresar</a>
</div>